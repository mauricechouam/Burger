{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">

    <div class="jumbotron">
        <div class="sign">
            <span class="fast-flicker"> Welcome </span> to Maurice<span class="flicker"> Burger restaurant </span>
        </div>
        <h3 id="color-override"> Enjoy the Burger</h3>
        <br><br><br>

        <div class="burgerimage">
            <img src="https://hhp-blog.s3.amazonaws.com/2019/07/burger.jpg" width="100" height="60"> </img>
            <img src="https://ddbuckingham.files.wordpress.com/2018/06/o-b-facebook.jpg" width="105" height="60">
            </img>
            <img src="https://www.mcdonalds.com/content/dam/uk/nfl/nutrition/nfl-product/product/related/mcdonalds-Vegetable-Deluxe.jpg"
                width="105" height="60"> </img>
            <img src="https://thebrag.com/wp-content/uploads/2019/05/McDonalds-Vegetarian.jpg" width="105" height="60">
            </img>
            <img src="https://www.qsrmagazine.com/sites/default/files/styles/story_page/public/news-image/sonic-unveils-new-jr-garlic-butter-bacon-burger.jpg?itok=jZfdng2m"
                width="105" height="60"></img>
        </div>
        <br><br><br>
        <form class="create-form">
            <div class="order ">
                <label for="newburger" id="color-override">New order :</label>
                <input type="text" id="newburger" name="burger">
                {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
                <button type="submit" class="btn btn-success" id="addburger">Submit Order</button>
            </div>
        </form>
    </div><!-- card -->

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>Burgers Ordered</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container --